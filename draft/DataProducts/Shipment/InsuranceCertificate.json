{
  "openapi": "3.0.2",
  "info": {
    "title": "Insurance Certificate",
    "description": "Data Product for Insurance Certificate",
    "version": "1.0.0"
  },
  "paths": {
    "/Shipment/InsuranceCertificate": {
      "post": {
        "summary": "Insurance Certificate",
        "operationId": "requestInsuranceCertificateData",
        "parameters": [
          {
            "description": "HMAC-RSA256 signature for the request using Product Gateway's public key",
            "required": false,
            "schema": {
              "title": "Request signature",
              "type": "string",
              "description": "HMAC-RSA256 signature for the request using Product Gateway's public key"
            },
            "name": "x-signature",
            "in": "header"
          },
          {
            "description": "The login token.",
            "required": false,
            "schema": {
              "title": "Authorization",
              "type": "string",
              "description": "The login token."
            },
            "name": "authorization",
            "in": "header"
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "required": false,
            "schema": {
              "title": "Authorization provider",
              "type": "string",
              "description": "The bare domain of the system that provided the token."
            },
            "name": "x-authorization-provider",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InsuranceCertificateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InsuranceCertificate"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "InsuranceCertificate": {
        "title": "InsuranceCertificate",
        "required": [
          "currencyCode",
          "descriptionOfGoods",
          "finalDestination",
          "handlingUnits",
          "instituteClauses",
          "insuranceValue",
          "insuranceValuePercentage",
          "insurerAddress",
          "insurerName",
          "modeOfDelivery",
          "placeOfReceipt",
          "totalGrossWeight"
        ],
        "type": "object",
        "properties": {
          "currencyCode": {
            "title": "Currency code",
            "type": "string"
          },
          "descriptionOfGoods": {
            "title": "Description of goods",
            "type": "string"
          },
          "finalDestination": {
            "title": "Final destination",
            "type": "string"
          },
          "handlingUnits": {
            "title": "Handling units",
            "type": "integer"
          },
          "instituteClauses": {
            "title": "Institute clauses",
            "type": "string"
          },
          "insuranceValue": {
            "title": "Insurance value",
            "type": "integer"
          },
          "insuranceValuePercentage": {
            "title": "Insurance value percentage",
            "type": "number"
          },
          "insurerAddress": {
            "title": "Insurer address",
            "type": "string"
          },
          "insurerName": {
            "title": "Insurer name",
            "type": "string"
          },
          "modeOfDelivery": {
            "title": "Mode of delivery",
            "type": "string"
          },
          "placeOfReceipt": {
            "title": "Place of receipt",
            "type": "string"
          },
          "totalGrossWeight": {
            "title": "Total gross weight",
            "type": "number"
          }
        }
      },
      "InsuranceCertificateRequest": {
        "title": "InsuranceCertificateRequest",
        "required": ["shipmentId"],
        "type": "object",
        "properties": {
          "shipmentId": {
            "title": "Shipment ID",
            "type": "string"
          }
        }
      },
      "ValidationError": {
        "title": "ValidationError",
        "required": ["loc", "msg", "type"],
        "type": "object",
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
